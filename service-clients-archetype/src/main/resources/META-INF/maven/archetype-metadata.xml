<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="poseidon-service-clients"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <modules>
    <module id="${rootArtifactId}-model" dir="__rootArtifactId__-model" name="${rootArtifactId}-model">
      <fileSets>
        <fileSet encoding="UTF-8" filtered="true">
          <directory>src/main/resources/idl/pojos</directory>
          <includes>
            <include>**/*.json</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-service-client" dir="__rootArtifactId__-service-client" name="${rootArtifactId}-service-client">
      <fileSets>
        <fileSet encoding="UTF-8" filtered="true">
          <directory>src/main/resources/idl/service</directory>
          <includes>
            <include>**/*.json</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
          <directory>src/test/java</directory>
        </fileSet>
      </fileSets>
    </module>
 </modules>

</archetype-descriptor>
